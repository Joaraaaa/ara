<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ara.mapper.MemberMapper">
	<!-- 회원가입 -->
	<insert id="signUp">
		insert into member(email,password,name)
		values(#{email},#{password},#{name})
	</insert>
	<!-- 로그인 -->
	<select id="login" resultType="org.ara.model.MemberVO">
		select * from member where
		email=#{email} and password=#{password};
	</select>
	<!-- 닉네임 중복확인 -->
	<select id="nachk" resultType="org.ara.model.MemberVO">
		select * from member where
		name=#{str};
	</select>
	<!-- 이메일 중복확인 -->
	<select id="emchk" resultType="org.ara.model.MemberVO">
		select * from member where
		email like concat(#{str},'%');
	</select>
		<select id="snsCheck" resultType="org.ara.model.MemberVO">
		select *
		from member
		where email=#{email};
	</select>
	<insert id="snsSignup">
		insert into member
		(password,name,email,phone,gender,birth_y,birth_m,birth_d,sns)
		values(#{password},#{name},#{email},#{id},"m","1000",#{birth_m},#{birth_d},true);
	</insert>
	
</mapper>