<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ara.mapper.MemberMapper">
	<!-- 회원가입 -->
	<insert id="signUp">
	<choose>
		<when test="admin==true">
		insert into b_member(bno,bname,phone,email,password,name)
		values(#{bno},#{bname},#{phone},#{email},#{password},#{name})
		</when>
		<otherwise>
		insert into member
			<choose>
				<when test="sns==true">
				(password,name,email,sns)
				values(#{password},#{name},#{email},true);
				</when>
				<otherwise>
				(email,password,name)
				values(#{email},#{password},#{name})
				</otherwise>
			</choose>
		</otherwise>
	</choose>
	</insert>
	<!-- 로그인 -->
	<select id="login" resultType="org.ara.model.MemberVO">
		select * from 
		<choose>
		<when test="admin==true">b_member</when>
		<otherwise>member</otherwise>
		</choose>
		where
		email=#{email} and password=#{password};
	</select>
	<!-- 닉네임 중복확인 -->
	<select id="nachk" resultType="org.ara.model.MemberVO">
		select * from member where
		name=#{str};
	</select>
	<!-- 이메일 중복확인 -->
	<select id="emchk" resultType="org.ara.model.MemberVO">
		select * from member where
		email like concat(#{str},'%');
	</select>
