<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ara.mapper.MemberMapper">
	<!-- 회원가입 -->
	<insert id="signUp">
		insert into member(id,password,name,email)
		values(#{id},#{password},#{name},#{email})
	</insert>
	<!-- 로그인 -->
	<select id="login" resultType="org.ara.model.MemberVO">
		select * from member where
		id=#{id} and password=#{password};
	</select>
	<!-- 아이디 중복확인 -->
	<select id="idchk" resultType="org.ara.model.MemberVO">
		select * from member where
		id=#{str};
	</select>
	<!-- 이메일 중복확인 -->
	<select id="emchk" resultType="org.ara.model.MemberVO">
		select * from member where
		email like concat(#{str},'%');
	</select>
</mapper>